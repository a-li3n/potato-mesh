<section class="full-screen-section full-screen-section--packet-stats">
  <div class="packet-stats-table-wrapper">
    <table id="packetStats">
      <thead>
        <tr>
          <th class="packet-stats-col packet-stats-col--name"><button type="button" class="sort-button" data-sort-key="short_name" data-sort-label="Name">Name <span class="sort-indicator" aria-hidden="true"></span></button></th>
          <th class="packet-stats-col packet-stats-col--tel"><button type="button" class="sort-button" data-sort-key="telemetry_count" data-sort-label="Telemetry">Tel <span class="sort-indicator" aria-hidden="true"></span></button></th>
          <th class="packet-stats-col packet-stats-col--pos"><button type="button" class="sort-button" data-sort-key="position_count" data-sort-label="Position">Pos <span class="sort-indicator" aria-hidden="true"></span></button></th>
          <th class="packet-stats-col packet-stats-col--tr"><button type="button" class="sort-button" data-sort-key="trace_count" data-sort-label="Trace">Tr <span class="sort-indicator" aria-hidden="true"></span></button></th>
          <th class="packet-stats-col packet-stats-col--tc"><button type="button" class="sort-button" data-sort-key="message_count" data-sort-label="Text Chat">Tc <span class="sort-indicator" aria-hidden="true"></span></button></th>
          <th class="packet-stats-col packet-stats-col--all"><button type="button" class="sort-button" data-sort-key="total_count" data-sort-label="All">All <span class="sort-indicator" aria-hidden="true"></span></button></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</section>
